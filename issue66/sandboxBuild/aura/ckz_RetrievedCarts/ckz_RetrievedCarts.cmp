<aura:component description="ckz_RetrievedCarts">

    <aura:attribute name="childCarts" type="List" required="false" />

    <h2>Carts</h2>

    <aura:if isTrue="{! $Browser.formFactor == 'DESKTOP'}">

    <table class="slds-table slds-table_bordered slds-table_striped slds-table_cell-buffer slds-table_fixed-layout">
        <thead>
        <tr class="slds-text-heading_label">
            <th scope="col"><div class="slds-truncate" title="Cart Name">Cart Name</div></th>
            <th scope="col"><div class="slds-truncate" title="Last Modified Date">Last Modified Date</div></th>
            <th scope="col activeCol" style="width: 75px;"><div class="slds-truncate" title="Active?">Active</div></th>
            <th scope="col"><div class="slds-truncate" title="Products">Products</div></th>
            <th scope="col"><div class="slds-truncate" title="Sub Amount">Amount</div></th>
            <th scope="col"><div class="slds-truncate" title="Status">Status</div></th>
            <!--<th scope="col"><div class="slds-truncate" title="Encrypted Id">Encrypted Id</div></th>-->
            <th scope="col"><div class="slds-truncate" title="Actions">Actions</div></th>

        </tr>
        </thead>
        <tbody>

        <aura:iteration items="{!v.childCarts}" var="retrievedCart">

            <c:ckz_RetrievedCartDetail childCart="{!retrievedCart}" cartId="{!v.cartId}" cartEncryptedId="{!v.cartEncryptedId}"/>

        </aura:iteration>
        </tbody>
    </table>

    </aura:if>

    <aura:if isTrue="{! $Browser.formFactor != 'DESKTOP'}">

            <aura:iteration items="{!v.childCarts}" var="retrievedCart">

                <c:ckz_RetrievedCartDetail childCart="{!retrievedCart}" cartId="{!v.cartId}" cartEncryptedId="{!v.cartEncryptedId}"/>

            </aura:iteration>

    </aura:if>

</aura:component>