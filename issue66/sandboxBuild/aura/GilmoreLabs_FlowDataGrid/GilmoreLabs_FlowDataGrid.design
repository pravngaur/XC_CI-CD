<design:component label="GilmoreLabs - Selectable Datatable">
   <design:attribute name="lstIds" label="1: ID List" description="A text array containing the IDs of the records you would like to display in the table." />
   <design:attribute name="strObjectName" label="2: Object API Name" description="The Object API name being displaying in the table" />
   <design:attribute name="strFields" label="3: Field API Names" description="A comma seperated list of the field API names to display in the table" />
   <design:attribute name="strObjectLink" label="Optionally specify which field will open the record in the gridview" />
    <design:attribute name="lstpreSelectedIds" label="4: Pre-Selected Rows" description="A text array containing the IDs of the records you would like pre-selected in the table" />
   <design:attribute name="lstSelectedIds" label="6: Selected Ids" description="The records selected by the user can be saved to an output array of Ids"/>
    <design:attribute name="firstSelectedId" label="7: First Selected Id" description="The first record selected by the user can be saved to an output text variable (Useful if only allowing a single selection)"/>
   <design:attribute name="maxRowSelection" label="5: Maximum Select Rows" description="The maximum number of rows the user can select from the table. For single selection, set to 1. For unlimited, set to -1." required="true"/>
</design:component>