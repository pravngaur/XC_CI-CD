            CCRZ.uiProperties.LLIOrderReviewView.partial.cartItemDetailsReview = '#CKZ-CartItemReview-View-Desktop';

            CCRZ.pubSub.on('view:LLIOrderReviewView:refresh', function () {
                $('[data-toggle="tooltip"]').tooltip()
            });
        });
    </script>
