                                        </div>

                                        <div class="col-sm-8">
                                            <div class="row shipInfo cc_ship_info">
                                                <div class="col-sm-6">
                                                    {{#ifDisplay 'SO.DsplShipOptions'}}
                                                        {{#if shipMethod}}
