<apex:component id="ckz_Checkout_LLI_OrderReview">

    <script id="CKZ-Order-Review-LLI-Desktop" type="text/template">
        <form id="reviewForm" class="form">
            <div class="cc_shipping_review_lli">

                <div class="row cc_message_row">
                    <div class="col-xs-12">
